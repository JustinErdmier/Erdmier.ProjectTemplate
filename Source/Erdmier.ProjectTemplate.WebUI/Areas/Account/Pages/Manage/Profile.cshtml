@page
@model Profile

<div class="flex flex-col gap-2">
    <h1 class="font-bold text-2xl text-primary">
        Profile
    </h1>

    <hr class="border-primary w-full" />

    Update your profile information.

    <partial for="StatusMessage"
             name="_StatusMessage" />

    <form class="flex flex-col gap-2"
          method="post">

        <div class="flex flex-col gap-1 items-start w-full">
            <p class="font-bold text-lg text-primary">
                USERNAME
            </p>
            <input aria-required="true"
                   asp-for="Input.UserName"
                   autocomplete="username"
                   class="input-field-two w-full" />
            <span asp-validation-for="Input.UserName"
                  class="italic text-red-300">
            </span>
        </div>

        <div class="flex flex-col gap-2 items-start w-full">
            <p class="font-bold text-lg text-primary">
                PHONE
            </p>
            <input asp-for="Input.PhoneNumber"
                   autocomplete="phone"
                   class="input-field-two w-full" />
            <span asp-validation-for="Input.PhoneNumber"
                  class="italic text-red-300">
            </span>
        </div>

        <button class="btn text-lg w-full"
                type="submit">
            Save
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
