@page
@model Email

<div class="flex flex-col gap-2">
    <h1 class="font-bold text-2xl text-primary">
        @Model.Title
    </h1>

    <hr class="border-primary w-full" />

    Update your email.

    <partial for="StatusMessage" name="_StatusMessage" />

    <form class="flex flex-col gap-2" method="post">

        <div class="flex flex-col gap-1 items-start w-full">
            <p class="font-bold text-lg text-primary">
                EMAIL
            </p>
            <input aria-required="true" asp-for="Input.NewEmail" autocomplete="email" class="input-field-two w-full" />
            <span asp-validation-for="Input.NewEmail" class="italic text-red-300">
            </span>
        </div>

        <button asp-page-handler="ChangeEmail" class="btn text-lg w-full" type="submit">
            Update
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
