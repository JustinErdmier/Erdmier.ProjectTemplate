@page
@model Password

<div class="flex flex-col gap-2">
    <h1 class="font-bold text-2xl text-primary">
        @Model.Title
    </h1>

    <hr class="border-primary w-full" />

    Update your password.

    <partial for="StatusMessage" name="_StatusMessage" />

    <form class="flex flex-col gap-2" method="post">

        <div class="flex flex-col gap-1 items-start w-full">
            <p class="font-bold text-lg text-primary">
                CURRENT PASSWORD
            </p>
            <input aria-required="true" asp-for="Input.OldPassword" autocomplete="current-password" class="input-field-two w-full" />
            <span asp-validation-for="Input.OldPassword" class="italic text-red-300">
            </span>
        </div>

        <div class="flex flex-col gap-1 items-start w-full">
            <p class="font-bold text-lg text-primary">
                NEW PASSWORD
            </p>
            <input aria-required="true" asp-for="Input.NewPassword" autocomplete="new-password" class="input-field-two w-full" />
            <span asp-validation-for="Input.NewPassword" class="italic text-red-300">
            </span>
        </div>

        <div class="flex flex-col gap-1 items-start w-full">
            <p class="font-bold text-lg text-primary">
                CONFIRM PASSWORD
            </p>
            <input aria-required="true" asp-for="Input.ConfirmPassword" autocomplete="new-password" class="input-field-two w-full" />
            <span asp-validation-for="Input.ConfirmPassword" class="italic text-red-300">
            </span>
        </div>

        <button class="btn text-lg w-full" type="submit">
            Update
        </button>
    </form>

    If you forgot your password, you will need to log out and click the "Forgot your password?" link on the login page.
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
