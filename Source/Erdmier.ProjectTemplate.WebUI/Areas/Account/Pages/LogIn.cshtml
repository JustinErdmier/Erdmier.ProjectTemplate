@page
@model LogIn

<div class="bg-white flex flex-col gap-4 items-center justify-between m-auto p-8 shadow-md">

    <h1 class="font-bold text-4xl text-primary">
        Welcome back 👋
    </h1>

    <hr class="border-primary w-full" />

    <form class="flex flex-col gap-2 items-center justify-between"
          method="post">
        <div asp-validation-summary="ModelOnly"
             class="text-red-300">
        </div>

        <div class="flex flex-col gap-2 items-start w-full">
            <p class="font-bold text-primary text-xl">
                USERNAME OR EMAIL
            </p>
            <input aria-required="true"
                   asp-for="Input.UserName"
                   autocomplete="username"
                   class="input-field w-full" />
        </div>

        <div class="flex flex-col gap-2 items-start w-full">
            <p class="font-bold text-primary text-xl">
                PASSWORD
            </p>
            <input aria-required="true"
                   asp-for="Input.Password"
                   autocomplete="current-password"
                   class="input-field w-full" />
            <a asp-page="./ForgotPassword"
               class="text-red-400 text-right w-full">
                Forgot your password?
            </a>
        </div>

        <button class="btn text-xl w-full"
                type="submit">
            Log In
        </button>
    </form>

    <div class="flex flex-col items-center justify-between">
        <div class="emMobileLg:flex-row emMobileLg:justify-between flex flex-col flex-wrap gap-4 w-full">
            <p>
                <a asp-page="./Register">Register</a>
            </p>
            <p>
                <a asp-page="./ResendEmailConfirmation">
                    Resend email confirmation
                </a>
            </p>
        </div>
    </div>

</div>

@if (Model.UiResponse.HasMessage)
{
    <partial for="UiResponse"
             name="_UiResponsePartial" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
